{%- if report -%}
  {%- assign reportSorted = report.list | sort: 'title' -%}
  <div class="table-wrapper">
    <table class="small">
      <thead>
        <tr>
          <th>
            <b>Site</b>
          </th>
          <th>
            <b>Specificity</b>
          </th>
        </tr>
      </thead>
      <tbody>
        {%- for item in reportSorted -%}
          <tr>
            <td>{{ item.site.title }}
            </td>
            <td>{{ item.specificity.max }}
            </td>
          </tr>
        {%- endfor -%}
      </tbody>
    </table>
  </div>
{%- endif -%}
