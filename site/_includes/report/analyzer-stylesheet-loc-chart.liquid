{%- if report -%}
  {% assign reportSorted = report.list | sort: 'title' %}
  <div class="table-wrapper">
    <table class="small charts-css bar multiple show-heading show-labels show-primary-axis show-data-axes data-spacing-{{ space | default: '3' }}" style="--labels-size: 10em;--cols: {{ report.list | size }};--col-height: {{ height | default: '2.5rem' }};">
      <caption>CSS lines</caption>
      <thead>
        <tr>
          <th scope="col">Site</th>
          <th scope="col">CSS lines</th>
        </tr>
      </thead>
      <tbody>
        {%- for item in reportSorted -%}
          {%- assign maxLinesOfCode = report.maxLinesOfCode.linesOfCode -%}
          {%- if item.linesOfCode -%}
            {%- assign linesOfCode = item.linesOfCode -%}
            {%- assign linesOfCodePercent = linesOfCode | divided_by: maxLinesOfCode -%}
          {%- else -%}
            {%- assign linesOfCode = 0 -%}
            {%- assign linesOfCodePercent = 0 -%}
          {%- endif -%}
          <tr>
            <th scope="row">{{ item.site.title }}</th>
            <td style="--size:{{ linesOfCodePercent }};"><span>CSS lines: {{ linesOfCode }}</span></td>
            </td>
          </tr>
        {%- endfor -%}
      </tbody>
    </table>
  </div>
  <small>This graph is interactive. You could tap or hover over bars to see extra information.</small>
{%- endif -%}
