{%- if report -%}
  {%- assign reportSorted = report.list | sort: 'accessibility.total' -%}
  <div class="table-wrapper">
    <table class="small">
      <thead>
        <tr>
          <th>
            <b>Site</b>
          </th>
          <th class="tar">
            <b>Selectors</b>
          </th>
          <th class="tar">
            <b>Unique</b>
          </th>
        </tr>
      </thead>
      <tbody>
        {%- if reportSorted -%}
          {%- for item in reportSorted -%}
            <tr>
              <td>{{ item.site.title }}
              </td>
              <td class="tar">{{ item.accessibility.total }}
              </td>
              <td class="tar">{{ item.accessibility.totalUnique }}
              </td>
            </tr>
          {%- endfor -%}
        {%- endif -%}
      </tbody>
    </table>
  </div>
{%- endif -%}
