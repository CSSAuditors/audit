{%- if report -%}
  <div class="table-wrapper">
    <table class="small charts-css bar multiple show-heading show-labels show-primary-axis show-data-axes data-spacing-{{ space | default: '3' }}" style="--labels-size: 10em;--cols: {{ report.list | size }};--col-height: {{ height | default: '2.5rem' }};">
      <caption>CSS source lines</caption>
      <thead>
        <tr>
          <th scope="col">Site</th>
          <th scope="col">CSS source lines</th>
        </tr>
      </thead>
      <tbody>
        {%- for item in report.list -%}
          {%- assign maxSourceLinesOfCode = report.maxSourceLinesOfCode.sourceLinesOfCode -%}
          {%- if item.sourceLinesOfCode -%}
            {%- assign sourceLinesOfCode = item.sourceLinesOfCode -%}
            {%- assign sourceLinesOfCodePercent = sourceLinesOfCode | divided_by: maxSourceLinesOfCode -%}
          {%- else -%}
            {%- assign sourceLinesOfCode = 0 -%}
            {%- assign sourceLinesOfCodePercent = 0 -%}
          {%- endif -%}
          <tr>
            <th scope="row">{{ item.site.title }}</th>
            <td style="--size:{{ sourceLinesOfCodePercent }};"><span>CSS source lines: {{ sourceLinesOfCode }}</span></td>
            </td>
          </tr>
        {%- endfor -%}
      </tbody>
    </table>
  </div>
  <small>This graph is interactive. You could tap or hover over bars to see extra information.</small>
{%- endif -%}
