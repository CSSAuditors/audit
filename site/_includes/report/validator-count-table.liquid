{%- if report -%}
  <div class="table-wrapper">
    <table class="small">
      <thead>
        <tr>
          <th></th>
          <th><b>Site</b></th>
          <th class="tar"><b>Count</b></th>
        </tr>
      </thead>
      <tbody>
        {%- if report.maxErrors -%}
          <tr>
            <th><b>Most errors</b></th>
            <td>{{ report.maxErrors.site.title }}</td>
            <td class="tar">{{ report.maxErrors.errors_count }}</td>
          </tr>
        {%- endif -%}
        {%- if report.minErrors -%}
          <tr>
            <th><b>Least errors</b></th>
            <td>{{ report.minErrors.site.title }}</td>
            <td class="tar">{{ report.minErrors.errors_count }}</td>
          </tr>
        {%- endif -%}
        {%- if report.avgErrors -%}
          <tr>
            <th><b>Average number of errors</b></th>
            <td>-</td>
            <td class="tar">{{ report.avgErrors | ceil }}</td>
          </tr>
        {%- endif -%}
        {%- if report.maxWarnings -%}
          <tr>
            <th><b>Most warnings</b></th>
            <td>{{ report.maxWarnings.site.title }}</td>
            <td class="tar">{{ report.maxWarnings.warnings_count }}</td>
          </tr>
        {%- endif -%}
        {%- if report.minWarnings -%}
          <tr>
            <th><b>Least warnings</b></th>
            <td>{{ report.minWarnings.site.title }}</td>
            <td class="tar">{{ report.minWarnings.warnings_count }}</td>
          </tr>
        {%- endif -%}
        {%- if report.avgWarnings -%}
          <tr>
            <th><b>Average number of warnings</b></th>
            <td>-</td>
            <td class="tar">{{ report.avgWarnings | ceil }}</td>
          </tr>
        {%- endif -%}
      </tbody>
    </table>
  </div>
{%- endif -%}
